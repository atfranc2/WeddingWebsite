@model List<string>

@{
    ViewData["Title"] = "Home Page";
}
<style>
    .carousel-inner {
    }

    .carousel-item {
        width: 100%;
        height: 100%;
        background-color: black;
    }

    .d-block {
        margin: 0 auto;
        height: 100%;
    }

    .side-by-side {
        margin: 0 auto;
        width: 45%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-content: center;
        height: 100px;
    }

    .left-side {
        align-content: center;
        text-align: center;
        border-right: thin solid black;
        height: 100%;
    }

    right-side {
        align-content: center;
        text-align: center;
        border-left: thin solid black;
        height: 100%;
    }

    .inner-content {
        align-content: center;
        text-align: center;
        font-size: xx-large;
        height: 100px;
        font-family: "Nunito Sans";
    }

    div.wedding-mark {
        font-weight: bolder;
        font-size: 50px;
        align-content: center;
        text-align: center;
        font-family: 'Segoe UI';
    }

    div.wedding-date {
        font-weight: bolder;
        font-size: 25px;
        align-content: center;
        text-align: center;
        font-family: 'Segoe UI';
    }

    div hr {
        padding: 0px;
        margin: auto;
        width: 20%;
        height: 1px;
        background-color: slategray;
    }

    .wrapper {
        text-align: center;
    }

    .button {
        position: absolute;
        top: 50%;
        
    }
</style>

<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="height:60vh">
        <ol class="carousel-indicators">
            @{
                var activeFlag = "active";
            }
            @for (var i = 0; i < Model.Count; i++)
            {
                activeFlag = (i == 0) ? "active" : "";
                <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@activeFlag"></li>
            }
        </ol>
        <div class="carousel-inner" style="width:100%; height:100%;align-items:center">
            @{
                var index = 0;
            }
            @foreach (var file in Model)
            {
                activeFlag = (index++ == 0) ? "active" : "";
                <div class="carousel-item @activeFlag">
                    <img class="d-block" src="@file">
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<br />

<div class="side-by-side row">
    <div class="left-side col-sm-6">
        <div class="inner-content">
            <span>April 23, 2021</span>
        </div>
    </div>
    <div class="right-side col-sm-6">
        <div class="inner-content">
            <span>Columbus, OH</span>
        </div>
    </div>
</div>

<br />
<br />

<div class="row" >
    <div class="wrapper col-sm-6" style="text-align:right">
        <a class="btn btn-primary" style="width: 200px" href="https://www.myregistry.com/giftlist/andrewabbyfrancis">View Registry</a>
    </div>
    <div class="wrapper col-sm-6" style="text-align:left">
        <a class="btn btn-primary" style="width: 200px" href="@Url.Action("Index", "RSVP")">RSVP</a>
    </div>
</div>

<br />

<div>
    <div class="wedding-mark">
        <span>A & A</span>
    </div>
    <hr>
    <div class="wedding-date">
        <span>04.23.2021</span>
    </div>
</div>


