@model WeddingWebsite.Models.RSVP
@{
    ViewData["Title"] = "RSVP";
}
@*
<partial name="~/Views/RSVP/PartialViews/_AttendenceForm.cshtml" model="Model" />
<partial name="~/Views/RSVP/PartialViews/_ContactInformationForm.cshtml" model="Model" />
<partial name="~/Views/RSVP/PartialViews/_TimelineForm.cshtml" model="Model" />
<partial name="~/Views/RSVP/PartialViews/_SongRequestForm.cshtml" model="Model" />
*@
<partial name="~/Views/RSVP/PartialViews/_DrinkForm.cshtml" model="Model" />

@section scripts {
    <script src="~/ViewScripts/RSVP/Invitation.js"></script>
    <script>

        $(document).ready(function () {
            addSongListener();

            $("#attendenceForm").submit(function (e) {
                e.preventDefault();
                $("#attendenceForm").hide();
                $("#contactInformationForm").show();
            });

            $("#prevContactInformation").click(function () {
                $("#contactInformationForm").hide();
                $("#attendenceForm").show();
            });

            $("#contactInformationForm").submit(function (e) {
                e.preventDefault();
                $("#contactInformationForm").hide();
                $("#timelineForm").show();
            });

            $("#prevGuestContactInfo").click(function () {
                $("#contactInformationForm").show();
                $("#timelineForm").hide();
            });

            $("#timelineForm").submit(function (e) {
                e.preventDefault();
                $("#timelineForm").hide();
                $("#songRequestForm").show();
            });

            $("#prevSongRequestForm").click(function () {
                $("#songRequestForm").show();
                $("#drinkForm").hide();
            });

            $("#songRequestForm").submit(function (e) {
                e.preventDefault();
                $("#songRequestForm").hide();
                $("#drinkForm").show();
            });
        })
    </script>
}
