@model List<string>

<h1>Photos</h1>

<style>
    .thumbnail {
        position: relative;
        width: 200px;
        height: 200px;
        overflow: hidden;
    }

        .thumbnail img {
            position: absolute;
            left: 50%;
            top: 50%;
            height: 100%;
            width: auto;
            -webkit-transform: translate(-50%,-50%);
            -ms-transform: translate(-50%,-50%);
            transform: translate(-50%,-50%);
        }
            .thumbnail img.portrait {
                width: 100%;
                height: 95%;
            }
</style>

<!-- Carousel markup goes here -->
@{
    var index = 0;
}

<div class="row" id="gallery" data-toggle="modal" data-target="#exampleModal">
    @foreach (var file in Model)
    {
        <div class="thumbnail col-12 col-sm-6 col-lg-3">
            <img class="portrait w-100" src="@file" data-target="#carouselExample" data-slide-to="@index" alt="First slide">
        </div>
        index++; 
    }
</div>

<!-- Modal markup: https://getbootstrap.com/docs/4.4/components/modal/ -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <!-- Carousel markup goes here -->
                <div id="carouselExample" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @{ 
                            index = 0;
                            string activeFlag; 
                        }
                        @foreach (var file in Model)
                        {
                            activeFlag = (index++ == 0) ? "active" : ""; 
                            <div class="carousel-item @activeFlag">
                                <img class="d-block w-100" src="@file" alt="First slide">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
        });
    </script>
}
